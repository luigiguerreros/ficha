<p id="notice"><%= notice %></p>

<h1>Promocions</h1>

<table>
  <thead>
    <tr>
      <th>Costo</th>
      <th>Tiempo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promocions.each do |promocion| %>
      <tr>
        <td><%= promocion.costo %></td>
        <td><%= promocion.tiempo %></td>
        <td><%= link_to 'Show', promocion %></td>
        <td><%= link_to 'Edit', edit_promocion_path(promocion) %></td>
        <td><%= link_to 'Destroy', promocion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

